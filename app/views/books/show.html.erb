<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/userinfo_newbook', user: @user, newbook: @newbook %>
    </div>

    <div class="col-md-8 offset-md-1">
      <table class="table table-sm">
        <thead>
          <tr>
            <th><h2>Book detail</h2></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td style="width: 200px;">
              <%= link_to user_path(@book.user) do %>
                <%= image_tag @book.user.get_profile_image(90,90) %>
                <br><%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
              <% end %>  
            </td>
            <td id="favorite_btn_<%= @book.id %>">
              <%= render "favorites/favorite_btn", book:@book %>
            </td>
            <td>コメント件数：<%= @book.book_comments.count %></td>
          </tr>
        </tbody>
      </table>
        <% @book.book_comments.each do |book_comment| %>
          <div>
            <%= book_comment.comment %>
            <% @book.book_comments.each do |book_comment| %>
              <% if book_comment.user == current_user %>
                <%= link_to "削除", book_book_comment_path(@book, book_comment), method: :delete %>
              <% end %>
            <% end %>
          </div>
        <% end %>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <div>
            <%= f.text_area :comment, rows: '5', cols: '85', placeholder: "コメントをここに" %>
          </div>
          <div>
            <%= f.submit "送信する" %></td>
          </div>
        <% end %>
    </div>
  </div>
</div>
