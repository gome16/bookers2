<h2>User info</h2>

<%= image_tag user.get_profile_image(100,100) %>

<div class="d-flex  pt-4 border-top">
  <h6 class="mr-5 font-weight-bold">name</h6>
  <h6 class="ml-5 font-weight-bold"><%= user.name %></h6>
</div>
<div class="d-flex pt-4 border-top ">
  <h6 class="mr-5 font-weight-bold">introduction</h6>
  <h6 class="mr-5 font-weight-bold"><%= user.introduction %></h6>
</div>

<div class="d-flex pt-4 border-top ">
  <h6 class="mr-5 font-weight-bold">followers</h6>
  <h6 class="mr-5 font-weight-bold"><%= link_to user.followers.count, user_followers_path(user) %></h6>
</div>

<div class="d-flex pt-4 border-top ">
  <h6 class="mr-5 font-weight-bold">follows</h6>
  <h6 class="mr-5 font-weight-bold"><%= link_to user.followings.count, user_followings_path(user) %></h6>
</div>

<div class="d-flex pt-5">
  <%= link_to  edit_user_path(@user), class: "btn btn-outline-secondary w-100" do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>

<h2 class="mt-2">New book</h2>
<%= form_with model: newbook, url: books_path, method: :post do | f| %>
  <div class="field mt-1">
    <%= f.label :title %>
  </div>
  <div class="field mt-1">
    <%= f.text_field :title, size: 27 %>
  </div>
  <div class="field mt-1">
    <%= f.label :body %>
  </div>
  <div class="field mt-1">
    <%= f.text_area :body, cols: 27 %>
  </div>
  <div class="field mt-2">
    <%= f.submit "Create Book", class: "btn btn-success" %>
  </div>
<% end %>
