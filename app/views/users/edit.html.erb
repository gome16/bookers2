<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-start mb-4">User info</h2>
      <% if @user.errors.any? %>
        <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
        <div class="mb-3 text-start">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3 text-start">
          <label>Image</label></br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>

        <div class="mb-3 text-start">
          <%= f.label :introduction, class: "form-label" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>

          <%= f.password_field :current_password, autocomplete: "current-password", class:"d-none" %>

        
        <div class="d-flex justify-content-between align-items-center">
          <%= f.submit 'Update User', class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
