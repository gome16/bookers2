<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-start mb-4">Editing Book</h1>
      <% if @user.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, url: book_path(@user), method: :patch, local: true, class: "mb-3" do |f| %>
        <div class="mb-3 text-start">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3 text-start">
          <%= f.label :body, class: "form-label" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div class="d-flex justify-content-between align-items-center">
          <%= f.submit 'Update Book', class: "btn btn-success" %>
        </div>

        <%= link_to "Show", book_path(@user.id) %>
        |
        <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>
